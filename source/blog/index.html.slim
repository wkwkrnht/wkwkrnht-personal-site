main.card-list
    - page_articles.each_with_index do |article, i|
        - title = article.title
        = link_to URI.encode(article.url), :class=>'mini-card', :title=>title, :tabindex=>'0' do
            = image_tag article.data.eyecatch || lorem.image('900x900'), :alt=>'eyecatch', :class=>'card-img', :loading=>'lazy'
            time.card-date
                = article.date.strftime('%Y-%m-%d')
            h2.card-title
                = title